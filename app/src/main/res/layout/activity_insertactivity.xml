<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".insertactivity">

    <EditText
        android:id="@+id/stu_name"
        android:layout_marginTop="100px"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Name"/>

    <EditText
        android:id="@+id/stu_age"
        android:layout_marginTop="50px"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Age" />

    <EditText
        android:id="@+id/stu_clg"
        android:layout_marginTop="50px"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter College Name" />




    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="100px"
            android:layout_height="wrap_content"
            android:text="Gender" />

        <RadioButton
            android:id="@+id/male"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="100px"
            android:text="Male"
            android:layout_height="wrap_content" >

        </RadioButton>
        <RadioButton
            android:id="@+id/female"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:text="Female"
            android:layout_height="wrap_content" >

        </RadioButton>

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hobby"
        android:layout_width="wrap_content"
        android:layout_marginTop="15px"
        android:textSize="22dp"
        android:layout_marginRight="50px"
        android:layout_height="wrap_content"
        android:text="Hobbies" >

    </TextView>
    <CheckBox
        android:id="@+id/cricket"
        android:layout_toRightOf="@id/hobby"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_marginRight="20px"
        android:text="Cricket"
        android:layout_height="wrap_content">



    </CheckBox>

    <CheckBox
        android:id="@+id/swimming"
        android:layout_toRightOf="@+id/cricket"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:text="Swimming"
        android:layout_height="wrap_content">

    </CheckBox>
        <CheckBox
            android:id="@+id/hockey"
            android:layout_below="@+id/cricket"
            android:layout_marginLeft="260px"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:text="Hockey"
            android:layout_height="wrap_content">

        </CheckBox>

        <CheckBox
            android:id="@+id/badminton"
            android:layout_below="@+id/swimming"
            android:layout_toRightOf="@+id/hockey"
            android:layout_marginLeft="20px"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:text="Badminton"
            android:layout_height="wrap_content">

        </CheckBox>

    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>


    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="insert"
        android:text="Insert" />
</LinearLayout>