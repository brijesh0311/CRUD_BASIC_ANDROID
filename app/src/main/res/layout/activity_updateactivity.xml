<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".updateactivity">

    <EditText
        android:id="@+id/stu_id_upd"
        android:layout_marginTop="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter ID to Update"/>

    <EditText
        android:id="@+id/stu_name_upd"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Name"/>

    <EditText
        android:id="@+id/stu_age_upd"
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Age" />

    <EditText
        android:id="@+id/stu_clg_upd"
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter College Name" />

    <RadioGroup
        android:id="@+id/group_upd"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gender_upd"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="100px"
            android:layout_height="wrap_content"
            android:text="Gender" />

        <RadioButton
            android:id="@+id/male_upd"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="100px"
            android:text="Male"
            android:layout_height="wrap_content" >

        </RadioButton>
        <RadioButton
            android:id="@+id/female_upd"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:text="Female"
            android:layout_height="wrap_content" >

        </RadioButton>

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hobby_upd"
            android:layout_width="wrap_content"
            android:layout_marginTop="15px"
            android:textSize="22dp"
            android:layout_marginRight="50px"
            android:layout_height="wrap_content"
            android:text="Hobbies" >

        </TextView>
        <CheckBox
            android:id="@+id/cricket_upd"
            android:layout_toRightOf="@id/hobby_upd"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="20px"
            android:text="Cricket"
            android:layout_height="wrap_content">



        </CheckBox>

        <CheckBox
            android:id="@+id/swimming_upd"
            android:layout_toRightOf="@+id/cricket_upd"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:text="Swimming"
            android:layout_height="wrap_content">

        </CheckBox>
        <CheckBox
            android:id="@+id/hockey_upd"
            android:layout_below="@+id/cricket_upd"
            android:layout_marginLeft="260px"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:text="Hockey"
            android:layout_height="wrap_content">

        </CheckBox>

        <CheckBox
            android:id="@+id/badminton_upd"
            android:layout_below="@+id/swimming_upd"
            android:layout_toRightOf="@+id/hockey_upd"
            android:layout_marginLeft="20px"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:text="Badminton"
            android:layout_height="wrap_content">

        </CheckBox>

    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner_upd"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <Button
        android:id="@+id/Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="updateData"
        android:text="Update" />

</LinearLayout>